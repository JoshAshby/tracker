!!!
%html
  %head
    %meta{ 'charset' => "utf-8" }
    %meta{ 'http-equiv' => "X-UA-Compatible", 'content' => "IE=edge" }
    %meta{ 'name' => "viewport", 'content' => "width=device-width, initial-scale=1" }

    %link{ rel: 'stylesheet', href: '/static/styles.css' }

    - if content_for? :css
      :css
        = yield_content :css

    - if content_for? :title
      %title #{ yield_content :title } - MentalTracker-9000
    - else
      %title MentalTracker-9000

  %body{ data: { 'react-router-url' => yield_content(:react_router_url) } }
    %section.hero.is-left.is-bold{ class: "#{ yield_content :header_hero_class if content_for? :header_hero_class }" }
      .hero-header
        %header.header
          .container
            .header-left.header-menu
              %span.header-item
                %a{ href: '/' }
                  Home

            .header-center

            .header-right

      .hero-content
        .container

      .hero-footer
        .tabs
          .container
            %ul

    - if content_for? :body
      = yield_content :body

    %footer.footer
      .container
        .content.is-centered
          %p
            %strong MentalTracker-9000
            by
            %a{ href: 'https://joshisa.ninja' }
              joshisa.ninja.
            The content is licensed
            %a{ href: "http://creativecommons.org/licenses/by-nc-sa/4.0/" }
              CC ANS 4.0
            unless otherwise noted.
          %p
            Built with
            %a{ href: "https://www.getlektor.com/" }
              Lektor
            and
            %a{ href:"http://bulma.io/" }
              Bulma

  %script{ type: 'text/javascript', src: '/static/app.js', charset: 'utf-8' }

  - if content_for? :javascript
    :javascript
      = yield_content :javascript
